---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  date: string;
  readTime: string;
  tags: string[];
  seoKeywords?: string[];
}

const { title, description, date, readTime, tags, seoKeywords = [] } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Base title={title} description={description} keywords={seoKeywords}>
  <article class="max-w-3xl mx-auto px-6 py-16 md:py-24">
    <header class="mb-10">
      <div class="flex items-center gap-4 text-sm text-dark/50 mb-4">
        <time>{formattedDate}</time>
        <span>{readTime} read</span>
      </div>
      <h1 class="font-display text-3xl md:text-4xl font-bold text-navy leading-tight tracking-tight">{title}</h1>
      <p class="text-lg text-dark/70 mt-4 leading-relaxed">{description}</p>
      <div class="flex gap-2 mt-4">
        {tags.map((tag) => (
          <span class="text-xs bg-teal-pale text-teal px-2 py-1 rounded">{tag}</span>
        ))}
      </div>
    </header>
    <div class="prose prose-lg max-w-none prose-headings:text-navy prose-headings:font-semibold prose-headings:font-display prose-a:text-teal prose-a:no-underline hover:prose-a:underline">
      <slot />
    </div>
    <footer class="mt-16 pt-8 border-t border-gray-200">
      <p class="text-sm text-dark/50">Published by SafetyTAP Team / FieldBridge AI</p>
      <a href="/blog" class="text-teal hover:text-teal-light text-sm mt-2 inline-block underline-offset-2 hover:underline transition-colors">Back to all posts</a>
    </footer>
  </article>
</Base>
