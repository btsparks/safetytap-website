---
interface Props {
  title: string;
  description: string;
  date: string;
  readTime: string;
  slug: string;
  tags: string[];
}

const { title, description, date, readTime, slug, tags } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="bg-white border border-gray-100 rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 group">
  <div class="h-1 bg-gradient-to-r from-teal to-teal-light"></div>
  <a href={`/blog/${slug}`} class="block p-6">
    <h2 class="text-lg font-semibold text-navy group-hover:text-teal transition-colors">{title}</h2>
    <p class="text-dark/70 mt-2 text-sm leading-relaxed">{description}</p>
    <div class="flex items-center gap-4 mt-3 text-sm text-dark/50">
      <time>{formattedDate}</time>
      <span>{readTime} read</span>
    </div>
    <div class="flex gap-2 mt-3">
      {tags.map((tag) => (
        <span class="text-xs bg-teal-pale text-teal px-2 py-1 rounded">{tag}</span>
      ))}
    </div>
  </a>
</article>
